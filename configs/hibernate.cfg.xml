<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=Watchshop</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">123</property>
		<property name="hibernate.default_catalog">Watchshop</property>
		<property name="hibernate.default_schema">dbo</property>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>

		<mapping class="model.Account" />
		<mapping class="model.Log" />
		<mapping class="Bill" />
		<mapping class="Brand" />
		<mapping class="model.Category" />
		<mapping class="Comment" />
		<mapping class="Customer" />
		<mapping class="Dept" />
		<mapping class="DetailBill" />
		<mapping class="Position" />
		<mapping class="Product" />
		<mapping class="model.SystemConfig" />
		<mapping class="model.Product" />
		<mapping class="model.Orders" />
		<mapping class="model.DetailOrders" />
	</session-factory>
</hibernate-configuration>
